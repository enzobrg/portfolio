{% extends 'base.html.twig' %}

{% block title %}My Porfolio{% endblock %}

{% block body %}
    {% include "_components/_navbar.html.twig" %}

    {% include "_components/_presentation.html.twig" %}
    <div class="text-white fs-2 m-5" id="div1">
        <i class="fas fa-history"></i>  Les derniers Projets :
    </div>
    <div class="d-flex flex-wrap">
        {% for project in projects %}
            <div class="col-3 d-flex flex-column m-5">
                <div><img src="{{ project.imageUrl }}" class="cardpic" alt="..."></div>
                <div class="mt-3"><h5 class="text-white mt-3">{{ project.title }}</h5></div>
                <div><p class="text-white">{{ project.description }}</p></div>
                <div><a href="{{ project.link }}" class="btn btn-light">Voir ce projet <i class="fas fa-arrow-circle-right"></i></a></div>
            </div>
        {% else %}
            <div class="col-2">
                <p class="text-white m-4">D'autres projets sont en cours de production, revenez un peu plus tard !</p>
            </div>
        {% endfor %}
            <a href=""><i class="far fa-arrow-alt-circle-right fs-2 arrow"></i></a>
    </div>

    <div class="text-white fs-2 m-5" id="div2">
        <i class="fas fa-shopping-cart"></i>  Les projets clients :
    </div>
    <div class="d-flex flex-wrap">
        {% for project in projects %}
            {% if project.category.name == 'Les projets clients' %}
            <div class="col-3 d-flex flex-column m-5">
                <div><img src="{{ project.imageUrl }}" class="cardpic" alt="..."></div>
                <div class="mt-3"><h5 class="text-white mt-3">{{ project.title }}</h5></div>
                <div><p class="text-white">{{ project.description }}</p></div>
                <div><a href="{{ project.link }}" class="btn btn-light">Voir ce projet <i class="fas fa-arrow-circle-right"></i></a></div>
            </div>
            {% else %}
                <div class="col-2">
                    <p class="text-white m-4">D'autres projets sont en cours de production, revenez un peu plus tard !</p>
                </div>
            {% endif %}
        {% endfor %}
        <a href=""><i class="far fa-arrow-alt-circle-right fs-2 arrow"></i></a>
    </div>

    <div class="text-white fs-2 m-5" id="div3">
        <i class="fas fa-laptop-code"></i>  Les sides-projects :
    </div>
    <div class="d-flex flex-wrap">
        {% for project in projects %}
            {% if project.category.name == 'Les sides-projects' %}
            <div class="col-3 d-flex flex-column m-5">
                <div><img src="{{ project.imageUrl }}" class="cardpic" alt="..."></div>
                <div><h5 class="text-white mt-3">{{ project.title }}</h5></div>
                <div><p class="text-white">{{ project.description }}</p></div>
                <div><a href="{{ project.link }}" class="btn btn-light">Voir ce projet <i class="fas fa-arrow-circle-right"></i></a></div>
            </div>
            {% else %}
                <div class="col-2">
                    <p class="text-white m-4">D'autres projets sont en cours de production, revenez un peu plus tard !</p>
                </div>
            {% endif %}
        {% endfor %}
        <a href=""><i class="far fa-arrow-alt-circle-right fs-2 arrow"></i></a>
    </div>
{% endblock %}
