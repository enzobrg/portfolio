{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    {% include "_components/_navbar.html.twig" %}

    <div class="text-white fs-2 m-5 text-center">
        <i class="fas fa-history"></i>  Mes projets :
    </div>

<div class="d-flex flex-wrap">
    {% for project in projects %}
    <div class="col-md-3 d-flex flex-column m-5 col-sm-12">
        <div><img src="{{ project.imageUrl }}" class="cardpic" alt="..."></div>
        <div class="mt-3"><h5 class="text-white mt-3">{{ project.title }}</h5></div>
        <div><a href="{{ path('home_projects_edit', {'id': project.id}) }}" class="btn btn-light">Modifier ce projet ? <i class="fas fa-pencil-alt"></i></a></div>
    </div>
    {% endfor %}
</div>
{% endblock %}
