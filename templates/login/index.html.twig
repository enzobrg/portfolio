{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="text-center mt-5">
        <h2 class="text-white text-center">Espace administrateur</h2>
    </div>

    <div class="d-flex justify-content-center text-white">
    <form action="{{ path('login') }}" class="d-flex flex-column mt-5" method="post">
        <label for="username">Email :</label>
        <input type="text" id="username" class="m-4" name="_username" value="{{ last_username }}"/>

        <label for="password">Password :</label>
        <input type="password" id="password" class="m-4" name="_password"/>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <button class="" type="submit">Login</button>
    </form>
    </div>
{% endblock %}
